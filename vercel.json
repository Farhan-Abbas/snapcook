{
    "rewrites": [
        {
            "source": "/api/foodItemsFinder",
            "destination": "/api/foodItemsFinder"
        },
        {
            "source": "/api/recipesGenerator",
            "destination": "/api/recipesGenerator"
        },
        {
            "source": "/(.*).(js|css|png|jpg|jpeg|gif|svg|ico)",
            "destination": "/src/$1.$2"
        },
        {
            "source": "/(.*)",
            "destination": "/src/index.html"
        }
    ],
    
    "functions": {
        "api/foodItemsFinder": {
            "maxDuration": 60
        },
        "api/recipesGenerator": {
            "maxDuration": 60
        }
    }
}

